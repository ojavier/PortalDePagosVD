<script>
$(document).ready( function () {

$('#modifyReferenciaBtn').click(function(e) {
    e.preventDefault(); // Prevent the form from automatically submitting

    let nombreCompleto = $('#NombreCompleto').text();
    let nuevaReferencia = $('#referencia').val();

    if (nombreCompleto == '') {
        Swal.fire({
            html: '<b>Por favor, selecciona un alumno de la tabla</b>',
            confirmButtonColor: '#d33',
            confirmButtonText: 'OK'
        });
        return false;
    }

    if (nuevaReferencia == '') {
        Swal.fire({
            html: '<b>Por favor ingresa la referencia</b>',
            confirmButtonColor: '#d33',
            confirmButtonText: 'OK'
        });
        return false;
    }

    // Check if the new reference already exists in the table
    let referenciaExists = $('#myTable tbody tr td:nth-child(6)').filter(function () {
        let cellText = $(this).text();
        return cellText !== '0' && cellText === nuevaReferencia;
    }).length > 0;

    // If the reference already exists, show an alert
    if (referenciaExists) {
        Swal.fire({
            icon: 'warning',
            html: '<b>Esta referencia esta duplicada!</b>',
            confirmButtonColor: '#d33',
            confirmButtonText: 'OK'
        });
        return false;
    }

    // If the reference does not exist, submit the form
    Swal.fire({
        html: `Quieres asignar la referencia <b>${nuevaReferencia}</b> a ${nombreCompleto}?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Si, asignar referencia',
        cancelButtonText: 'Cancelar'
    }).then((result) => {
        if (result.isConfirmed) {
            $('form').submit();
        }
    });
}); 


// Initialize the DataTable
var table = $('#myTable').DataTable({
    dom: 'Blfrtip',
    buttons: [
        'copy', 'excel', 'pdf',
    ],
    language: {
        processing:     "Procesando...",
        search:         "Buscar:",
        lengthMenu:    "Mostrar _MENU_ elementos",
        info:           "Mostrando de _START_ a _END_ de _TOTAL_ elementos",
        infoEmpty:      "Mostrando 0 de 0 de 0 elementos",
        infoFiltered:   "(filtrado de _MAX_ elementos en total)",
        infoPostFix:    "",
        loadingRecords: "Cargando registros...",
        zeroRecords:    "No se encontraron registros",
        emptyTable:     "No hay datos disponibles en la tabla",
        paginate: {
            first:      "Primero",
            previous:   "Anterior",
            next:       "Siguiente",
            last:       "Último"
        },
        aria: {
            sortAscending:  ": activar para ordenar la columna de manera ascendente",
            sortDescending: ": activar para ordenar la columna de manera descendente"
        }
    }
});
$('select').formSelect();  

// Add click event listener to table rows
$('#myTable tbody').on('click', 'tr', function(){
    // Deselect previously selected rows
    if (!$(this).hasClass('selected')) {
        table.$('tr.selected').removeClass('selected');
    }
    // Toggle row selection
    $(this).toggleClass('selected');  

    // If the row is selected
    if ($(this).hasClass('selected')) {
        // Assuming the email is in the first cell of the row
        let firstName = $(this).find('td').eq(0).text();
        let middleName = $(this).find('td').eq(1).text();
        let lastName = $(this).find('td').eq(2).text();

        let nombreCompleto = firstName + ' ' + middleName + ' ' + lastName;

        let email = $(this).find('td').eq(3).text();

        let matricula = $(this).find('td').eq(4).text();

        $('#NombreCompleto').text(nombreCompleto);

        $('#email').val(email);

        $('#matricula').text(matricula);
    } else {
        // If the row is deselected, clear the email value
        $('#NombreCompleto').text('');

        $('#email').val('');

        $('#matricula').text('');
    }
});

});
</script>


