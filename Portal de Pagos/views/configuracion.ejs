<div class="container">
    <div class="row">
        <div class="col s12">
            <h4 class="roboto-slab">ASIGNA REFERENCIAS</h4>
            <br>
        </div>
    </div>

<div class = "col s12">
    <table id="myTable" class="striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Email</th>
            <th>Matricula</th>
            <th>Referencia</th>
          </tr>
        </thead>
        <tbody>
          <% alumnos.forEach(function(alumno) { %>
            <tr>
                <td><%= alumno.Nombre %></td>
                <td><%= alumno.ApellidoP %></td>
                <td><%= alumno.ApellidoM %></td>
                <td><%= alumno.Email %></td> <!-- Replace 'name' and 'semester' with the actual column names in your database -->
                <td><%= alumno.Matricula %></td>
                <td><%= alumno.Referencia %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
</div>

<br><br>

<div class = "row">
    <div class = "col s6 offset-s3"> 
        <div class = "card">
            <div class = "card-content">
                <div class = "row">
                    <div class = "col s6">
                        <p> Alumno </p>
                        <strong><span id="NombreCompleto" name="NombreCompleto" style="font-size: large;"></span></strong>
                    </div>
                    <div class = "col s6">
                        <p> Matricula </p>
                        <strong><span id="matricula" name="matricula" style="font-size: large;"></span></strong>
                    </div>
                </div>

                <form action="/configuracion" method = "POST">
                <br>
                    <div class = "row">
                        <div class="col s6 input-field" style = "left: 0%;">
                            <p> Referencia: </p>
                            <div class="col s12 input-field">
                                <input type="hidden" id="email" name="email">
                                <input id="referencia" name="referencia" type="text" required="" autocomplete="off" class="validate">
                            </div>    
                        </div>
                        <div class="col s6">
                            <br><br><br>
                            <button id="modifyReferenciaBtn" class="btn waves-effect waves-light carmin" type="submit">REGISTRAR</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
            

