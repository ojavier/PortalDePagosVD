<%- include('partials/head.ejs', {
    isLoggedIn: isLoggedIn, 
    permisos: permisos,
    usuario: usuario
}) %>

<main class='container' style='margin-top: 2rem;'>
    <div class='row'>
        <div class='col s12 m4'>
            <div class='card'>
                <div class='card-content center'>
                    <i class='material-icons large'>account_circle</i>
                    <span class='card-title'><%= usuario.Nombre %> <%= usuario.ApellidoP %> <%= usuario.ApellidoM %></span>
                    <p class='<%= (usuario.status === 'Si')? "green-text" : "red-text" %>'>Status: <%= (usuario.status === 'Si')? "Activo" : "Inactivo" %></p>
                </div>
            </div>
        </div>
        <div class='col s12 m8'>
            <div class='card'>
                <div class='card-content'>
                    <span class='card-title'>Información Personal:</span>
                    <table class='striped'>
                        <tbody>
                            <tr>
                                <td>Nombre completo:</td>
                                <td><%= usuario.Nombre %> <%= usuario.ApellidoP %> <%= usuario.ApellidoM %></td>
                            </tr>
                            <tr>
                                <td>Email:</td>
                                <td><%= usuario.Email %></td>
                            </tr>
                            <% if (role === 'Alumno') { %>
                            <tr>
                                <td>Matrícula:</td>
                                <td><%= matricula %></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer.ejs') %>
