<div class="container">
    <div class="row">
      <div class="col s12" style="padding-left: 20px; padding-right: 20px;">
        <div class="card" style="padding-left: 20px; padding-right: 20px;">
            <ul class="tabs">
                <li class="tab col s12"><a href="#estado-cuenta">Estado de cuenta</a></li>
            </ul>

        <div id="estado-cuenta">
            <!-- Contenido Estado de cuenta  -->
            <table class="striped">
              <thead>
                <tr>
                  <th>Concepto</th>
                  <th>Cantidad</th>
                  <th>Fecha Limite</th>
                </tr>
              </thead>
              <tbody>
                <% estadoCuentas.forEach(function(estadoCuenta) { %>
                  <tr>
                    <td><%= estadoCuenta.Concepto %></td>
                    <td>$ <%= estadoCuenta.Cantidad %></td>
                    <td>      
                      <% 
                      let date = new Date(estadoCuenta.FechaLimite);
                      let formattedDate = date.getDate() + '-' + (date.getMonth() + 1) + '-' + date.getFullYear();
                      %>
                      <%= formattedDate %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
        </div>
      </div>
      <a href="/paymethod?paymentType=colegiatura" class="btn modal-trigger carmin">Pagar Colegiatura</a>


<br><br><br>

<div class="row">
  <div class="col s12" style="padding-left: 20px; padding-right: 20px;">
    <div class="card" style="padding-left: 20px; padding-right: 20px;">
        <ul class="tabs">
            <li class="tab col s12"><a href="#otros-pagos">Otros Pagos</a></li>
          </ul>
      <div id="otros-pagos">
          <!-- Contenido Otros-Pagos  -->
