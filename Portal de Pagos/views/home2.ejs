                      <td><%= pago.Concepto %></td>
                      <td><%= pago.Total %></td>
                      <td><%= pago.Metodo %></td>
                      <td>                    
                        <% 
                        let date = new Date(pago.FechaLimite);
                        let formattedDate = date.getDate() + '-' + (date.getMonth() + 1) + '-' + date.getFullYear();
                        %>
                        <%= formattedDate %>
                        </td>
                        <td>      
                        <% 
                        date = new Date(pago.Fecha);
                        formattedDate = date.getDate() + '-' + (date.getMonth() + 1) + '-' + date.getFullYear();
                        %>
                        <%= formattedDate %>
                        </td>
                    </tr>
                  <% } %>
                <% }); %>
                </tbody>
            </table>
          </div>
          <div class="card" id="test3" class="tab col s12">
            <table class="striped">
              <thead>
                <tr>
                  <th>Concepto</th>
                  <th>Monto</th>
                  <th>Metodo</th>
                  <th>Fecha Limite</th>
                  <th>Fecha de pago realizado</th>
                </tr>
              </thead>
              <tbody>
                <% pagos.forEach(function(pago) { %>
                  <% if (pago.Concepto !== "Colegiatura") { %>
                    <tr>
                      <td><%= pago.Concepto %></td>
                      <td><%= pago.Total %></td>
