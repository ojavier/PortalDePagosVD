<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Pago - Administrador</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <style>
        main.container {
            padding-bottom: 2rem; 
        }
        th, td {
            text-align: center; 
        }
        .row {
            margin-bottom: 20px;
        }
        .input-field input[type=text], 
        .input-field input[type=number], 
        .input-field input[type=email], 
        .input-field input[type=date] {
            border-bottom: 1px solid #9e9e9e;
            box-shadow: none;
        }
        .input-field label {
            color: #26a69a;
        }
        .input-field input[type=text]:focus, 
        .input-field input[type=number]:focus, 
        .input-field input[type=email]:focus, 
        .input-field input[type=date]:focus {
            border-bottom: 1px solid #26a69a;
            box-shadow: 0 1px 0 0 #26a69a;
        }
        .btn {
            background-color: #26a69a;
        }
        .btn:hover {
            background-color: #009688;
        }
    </style>
</head>
<body>

<%- include('partials/header.ejs') %>

<main class="container" style="margin-top: 2rem;">
    <h4 class="center-align">REGISTRAR PAGO EN EFECTIVO:</h4> 
    <div class="row">
        <div class="col s12">
            <form action="/search" method="GET">
                <div class="input-field">
                    <i class="material-icons prefix">search</i> 
                    <input id="search" type="text" class="validate" name="query">
                    <label for="search">Buscar Alumno (Matrícula, Email)</label>
                    <button class="btn waves-effect waves-light" type="submit">Buscar</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <table class="highlight">
                <thead>
                    <tr>
                        <th>Seleccionar</th>
                        <th>Nombre</th>
                        <th>Matrícula</th>
                        <th>Correo</th>
                        <th>Carrera</th>
                        <th>Semestre</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><label><input type="checkbox" class="filled-in" /><span></span></label></td>
                        <td>Pablo Perez Castro</td>
                        <td>10001</td>
                        <td>pablo@example.com</td>
                        <td>Arquitectura Contemporánea</td>
                        <td>5</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <h5 class="center-align">Datos del Pago:</h5> 
            <form action="/registrar_pago" method="POST">
                <div class="input-field">
                    <input id="matricula" type="text" class="validate" name="matricula">
                    <label for="matricula">Matrícula del Alumno</label>
                </div>
                <div class="input-field">
                    <input id="monto" type="number" class="validate" name="monto">
                    <label for="monto">Monto del Pago</label>
                </div>
                <div class="input-field">
                    <input id="concepto" type="text" class="validate" name="concepto">
                    <label for="concepto">Concepto del Pago</label>
                </div>
                <div class="input-field">
                    <input id="fecha" type="text" class="datepicker" name="fecha">
                    <label for="fecha">Fecha del Pago</label>
                </div>
                <div class="center-align">
                    <button class="btn waves-effect waves-light" type="submit">Registrar Pago</button>
                </div>
            </form>
        </div>
    </div>
</main>

<%- include('partials/footer.ejs') %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var elems = document.querySelectorAll('.datepicker');
        var options = {
            format: 'dd/mm/yyyy',
            autoClose: true
        };
        var instances = M.Datepicker.init(elems, options);
    });
</script>
</body>
</html>
